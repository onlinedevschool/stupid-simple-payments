<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="row">
      <div class="well text-center">
        <h2>You were invoiced for 
            <%= number_to_currency(@invoice.amount) %> USD</h2>
        <h3>(<%= @invoice.minutes %> minutes @ 
            <%= @invoice.rate %>/hour)</h3>
      </div>
    </div>

    <div class="row">
      <div class="page-header">
        <h1>Pay Invoice</h1>
<% if Setting.first.stripe_test_mode? %><h2>TEST MODE</h2><% end %>
      </div>
    </div>

    <%= render 'form' %>
  </div>
</div>
